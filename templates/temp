<!DOCTYPE html>
<html>

<head>
    <title>Stacked Divs Example</title>
    <style>
        .my-divs {
            position:absolute;
            top:20vh;
            left:45vw;
            width: 10vw;
            height: 10vh;
            background-color: gray;
            margin: 10px auto;
            display: none;
        }

        .thumbs-up-icon {
            width: 50px;
            height: 50px;
            background-image: url('thumbs-up.png');
            background-size: contain;
            margin: 10px auto;
            cursor: pointer;
        }

        .thumbs-up {
            width: 8vw;
            height: 8vh;
            position: fixed;
            top: 21vh;
            left: 46vw;
            background-image: url('thumbs-up.png');
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center;
        }
    </style>
</head>

<body>
    <div class="my-divs" style="display: block; ">div1</div>
    <div class="my-divs">div2</div>
    <div class="my-divs">div3</div>
    <div class="thumbs-up-icon"></div>

    <script>
        const divElements = document.querySelectorAll('.my-divs');
        const thumbsUpIcon = document.querySelector('.thumbs-up-icon');
        thumbsUpIcon.addEventListener('click', showThumbsUp);


        function showThumbsUp() {
            const divElements = document.querySelectorAll('.my-divs');

            const thumbsUpIcon = document.querySelector('.thumbs-up-icon');
            thumbsUpIcon.addEventListener('click', showThumbsUp);



            const thumbsUpDiv = document.createElement('div');
            thumbsUpDiv.classList.add('thumbs-up');
            document.body.appendChild(thumbsUpDiv);

            setTimeout(() => {
                document.body.removeChild(thumbsUpDiv);
            }, 2000);
        }

        let currentDivIndex = 0;

        function showNextDiv() {
            if (currentDivIndex >= divElements.length) {
                return;
            }

            divElements[currentDivIndex].style.display = 'none';
            currentDivIndex++;

            if (currentDivIndex < divElements.length) {
                divElements[currentDivIndex].style.display = 'block';
            }
        }

        function showThumbsUp() {
            const thumbsUpDiv = document.createElement('div');
            thumbsUpDiv.classList.add('thumbs-up');
            document.body.appendChild(thumbsUpDiv);

            setTimeout(() => {
                document.body.removeChild(thumbsUpDiv);
                showNextDiv();
            }, 2000);
        }



    </script>
</body>

</html>